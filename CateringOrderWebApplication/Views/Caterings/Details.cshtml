@model CateringOrderWebApplication.Models.DomainModels.Caterings.Catering;

@{
    ViewData["Title"] = $"Catering {Model.Name}";
}

<div class="row px-4 py-4">

    <div class="col-md-8 offset-2">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.FeaturedImageUrl" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.ShortDescription</p>
                        <p class="card-text"><b>Category: </b>@Model.Content</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-controller="Home" asp-action="Index">
                                Back to list
                            </a>
                            <a class="btn btn-success text-white"
                               asp-controller=""
                               asp-action=""
                               asp-route-id="@Model.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
