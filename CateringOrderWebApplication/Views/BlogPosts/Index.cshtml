@model CateringOrderWebApplication.Models.ViewModels.HomeViewModel;

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Poznaj różne diety
            </h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if (@Model != null && @Model.Tags.Count() > 0)
            {
                @foreach (var tag in @Model.Tags)
                {
                    <span class="badge bg-dark me-1">@tag.Name</span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (@Model.BlogPosts.Count() > 0)
            {
                @foreach (var blogPost in @Model.BlogPosts)
                {
                    <div class="mb-4 bg-light box-shadow px-5 py-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                             class="mb-2 d-block img-fluid" />

                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">
                            Author: @blogPost.Author
                            <br />
                            Published date: @blogPost.PublishedDate.ToShortDateString()
                        </p>

                        <p mb-4>
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-4">@blogPost.ShortDescription</p>

                        <a class="btn btn-dark"
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">
                            Read more
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>
