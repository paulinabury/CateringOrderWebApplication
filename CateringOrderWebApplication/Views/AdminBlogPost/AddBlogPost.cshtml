@using CateringOrderWebApplication.Models.ViewModels;
@model AddBlogPostRequest;

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Create blog post</h1>
    </div>
</div>


<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input type="text" class="form-control" id="name" asp-for="Heading" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">PageTitle</label>
            <input type="text" class="form-control" id="name" asp-for="PageTitle" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Contet</label>
            <input type="text" class="form-control" id="name" asp-for="Contet" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Short Description</label>
            <input type="text" class="form-control" id="name" asp-for="ShortDescription" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Upload image</label>
            <input type="image" class="form-control" id="name" asp-for="FeaturedImageUrl" />
        </div>

        <div class="mb-3">
            <label class="form-label">Url Handle</label>
            <input type="text" class="form-control" id="name" asp-for="UrlHandle" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" id="name" asp-for="Author" />
        </div>

        @* TODO foreach through all Tags and add selected ones to Model  *@
        

    </form>

    <div class="mb-3">
        <button type="submit" class="btn btn-dark" asp-action="AddBlogPost">Save</button>
    </div>
</div>